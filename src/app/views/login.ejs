<%- contentFor('title') %>
Login page

<%- contentFor('head') %>
<link rel="stylesheet" href="/public/css/login.css">

<%- contentFor('body') %>
<!-- conteúdo que vai dentro do body -->

<div class="float-words" >
  <h5> MARATONA DE PROGRAMAÇÃO </h5>
  <h5> CATÁLOGO DE PROBLEMAS </h5>
</div>

<div class="container d-flex justify-content-center align-items-center vh-100" >
  <form action="/" method="POST"  class="w-50 bg-white p-5">
    <%- include('partials/messages') %>
    <h1 class="display-4 mb-5">Login</h1>
    <div class="form-group row">
      <div class="col-sm-12">
        <input
          type="email"
          name="email"
          class="form-control"
          id="inputEmail"
          placeholder="Email"
          value="<%= typeof email !== 'undefined' ? email : ''%>"
        >
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
        <input
          type="password"
          name="senha"
          class="form-control"
          id="inputPassword"
          placeholder="Senha"
          value="<%= typeof senha !== 'undefined' ? senha : ''%>"
        >
      </div>
    </div>
    <button type="submit" class="btn btn-primary w-100">Entrar</button>
  </form>
</div>

<script src="/public/js/index.js"></script>